@model AvatarsUploadVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.AvatarsUpload.Id != 0 ? "Dodaj" : "Update") Avatar</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="AvatarsUpload.Id" hidden />
            <div class="border p-2">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="AvatarsUpload.Name" class="form-control border-0 shadow" />
                    <label asp-for="AvatarsUpload.Name" class="ms-2"></label>
                    <span asp-validation-for="AvatarsUpload.Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="AvatarsUpload.CoinsValue" class="form-control border-0 shadow" />
                    <label asp-for="AvatarsUpload.CoinsValue" class="ms-2"></label>
                    <span asp-validation-for="AvatarsUpload.CoinsValue" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="file" name="file" class="form-control border-0 shadow" />
                    <label asp-for="AvatarsUpload.ImageUrl" class="ms-2"></label>
                </div>
              
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        @if (Model.AvatarsUpload.Id != 0)
                        {

                            <button type="submit" class="btn btn-primary form-control">Zaktualizuj</button>
                        }
                        else
                        {
                         
                            <button type="submit" class="btn btn-primary form-control">Utwórz</button>
                        }

                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Avatars" asp-action="Index" class="btn btn-secondary border form-control">Wróć do Listy</a>
                    </div>
                </div>
               

            </div>
        </form>
      
    </div>
</div>



@section Scripts{
 
    @{
        <partial name="_ValidationScriptsPartial" />
    }
  }